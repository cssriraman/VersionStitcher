<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <VersionStitcherPath Condition="$(VersionStitcherPath) == '' Or $(VersionStitcherPath) == '*Undefined*'">$(MSBuildThisFileDirectory)..\VersionStitcher.dll</VersionStitcherPath>
  </PropertyGroup>

  <UsingTask
      TaskName="VersionStitcherTask"
      AssemblyFile="$(VersionStitcherPath)" />
  <Target
      Name="VersionStitcherTarget"
      AfterTargets="CoreCompile"
      >
    <VersionStitcherTask ProjectPath="$(ProjectPath)" SolutionPath="$(SolutionPath)" AssemblyPath="$(OutputPath)" />
  </Target>
</Project>

